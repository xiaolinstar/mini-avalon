# APP Env (dev, test, prod)
APP_ENV=dev

# Flask Settings
SECRET_KEY=dev-secret-key-change-in-prod
FLASK_DEBUG=True

# WeChat Configuration
WECHAT_APPID=your_appid_here
WECHAT_TOKEN=your_token_here
WECHAT_SECRET=your_secret_here
WECHAT_AES_KEY=your_encoding_aes_key_here

# Database Configuration
# Dev uses docker-compose MySQL by default
DATABASE_URL=mysql+pymysql://user:password@localhost/avalon_db

# Redis Configuration
# Dev uses docker-compose Redis by default
REDIS_URL=redis://localhost:6379/0

# Logging & Monitoring
LOG_LEVEL=INFO
LOG_FORMAT=TEXT
SENTRY_DSN=
